/* shareInfoModal.wxss */
Page{
  background-color: #f0f0f0;
  background-image:url('https://www.rankyoo.com/image/map_bg.png');
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.order_area{
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.close_area{
  height: 80rpx;
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title{
  width: 100%;
  height: 120rpx;
  background-color: #f4c600;
  color:#ffffff;
  font-size: 42rpx;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.info_view{
  font-size: 30rpx;
  padding:0 20rpx;
  display: flex;
  flex-direction: column;
}
.one_info{
  height: 91rpx;
}
.one_info_view{
  width: 100%;
  height:90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.subject_text{
  color: #a6a6a6;
  font-weight: bold;
}
.light_text{
  color: #f4c600;
  font-weight: bold;
}
.book{
  margin-top: 30rpx; 
  padding: 0 20rpx;
}
.control_area{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.control_button{
  width: 300rpx;
  display: flex;
  align-content: center;
  justify-content: center;
}
.line2{
  width: 1rpx;
  height: 32rpx;
  background-color: #b2b2b2;
}