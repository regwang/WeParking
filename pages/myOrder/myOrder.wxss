/* myOrder.wxss */
Page{
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
}

.one_line_order{
  /* width: 100%; */
  height: 141rpx;
  display: flex;
  flex-direction: column;
  padding: 0 24rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.top_area{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.time_area{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.time_margin{
  margin-left: 10rpx;
}
.status_area{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.ing_status{
  color:#f4c600;
}
.over_status{
  color:#b2b2b2;
}
.bottom_area{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.main_text_size{
  font-size: 34rpxl
}
.no_data_area{
  width: 100%;
  height: 1100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.load_hint{
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  width: 100%;
}

.navbar{  
  flex: none;  
  display: flex;  
  background: #ffffff;
  height: 90rpx;
  font-size:34rpx;
  font-weight: bold;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 90rpx;
  color:#b2b2b2;  
}  
.navbar .item.active{  
  color: #f4c600; 
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #f4c600;
}  
