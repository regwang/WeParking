<!--bindPhone.wxml-->
<view class="page_order">
  <view class="phone_area">
    <view class="phone">
      <text class="main_text first_text">手机号码</text>
      <input class="hint_text second_text" placeholder="填写手机号码" placeholder-class="hint_info" maxlength="11" type="number" />
      <button size="mini" type="primary" style="background-color:#f4c600">验证码</button>
    </view>
    <view class="line"></view>
    <view class="phone">
      <text class="main_text first_text">验证码</text>
      <input class="hint_text second_text" placeholder="输入验证码" placeholder-class="hint_info" maxlength="6" type="number" />
    </view>
  </view>
  <view class="agreement_area">
      <checkbox value="1" checked="true" color="#f4c600" />
      <text class="hint_text agreement_text">我已阅读并同意</text>
      <text class="main_text agreement_text">《用户注册协议》</text>
  </view>
  <view class="signup_area">
    <button size="default" type="primary" style="background-color:#f4c600">完成</button>
  </view>
</view>
