Page {
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.phone_area{
  height:181rpx;
  width:100%;
  background-color: #ffffff;
  margin-top: 40rpx;
  padding:0 32rpx;
}
.phone{
  height:90rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.phone_text{
  font-size: 30rpx;
  color: #262932;
  font-weight: bold;
}
.phone_input{
  height: 100%;
  width: 45%;
  margin-left: 30rpx;
}