<!--share.wxml-->
<block wx:if='{{shareStatus==2}}'>
  <view class="page_order">
    <view class="carHint hint_text">
      <text>在进行车位共享前,需要完善车辆信息</text>
    </view>
    <view class="phone_area">
      <view class="phone">
        <text class="main_text first_text">车牌号码</text>
        <input class="hint_text second_text" bindinput="getCarNumber" placeholder="输入您的车牌号" placeholder-class="hint_text"  type="text" />
      </view>
      <view class="line"></view>
      <view class="phone">
        <text class="main_text first_text">车辆颜色</text>
        <input class="hint_text second_text" bindinput="getCarColor" placeholder="输入您的车辆颜色" placeholder-class="hint_text"  type="text" />
      </view>
    </view>
    <view class="signup_area">
      <button  bindtap="bindCar" size="default" type="primary" style="background-color:#f4c600">提交</button>
    </view>
  </view>
</block>
<block wx:elif='{{shareStatus==3}}'>
  <map id='shareMap' class='map_style'  latitude="{{latitude}}" longitude="{{longitude}}" bindcontroltap="bindcontroltap"   controls="{{controls}}" show-location />
</block>
<block wx:elif='{{shareStatus==4}}'>
  <!-- <template is="shareParking"></template> -->
  <view class="time_area">
    <view class="chooseTime_title">
      <text class="main_text">请选择离场时间</text>
    </view>
    <view class="chooseTime_area">
      <button bindtap="chooseMin" data-min="15"  plain="{{minButton1.plain}}" style="color:{{minButton1.color}};font-size:30rpx;font-weight:bold;display:flex;align-items:center;background-color:{{minButton1.bgColor}};border-color:#f4c600;height:90rpx;width:160rpx;padding:10rpx auto;">15分钟</button>
      <button bindtap="chooseMin" data-min="30" plain="{{minButton2.plain}}" style="color:{{minButton2.color}};font-size:30rpx;font-weight:bold;display:flex;align-items:center;background-color:{{minButton2.bgColor}};border-color:#f4c600;height:90rpx;width:160rpx;padding:10rpx auto;">30分钟</button>
      <button bindtap="chooseMin" data-min="45"  plain="{{minButton3.plain}}" style="color:{{minButton3.color}};font-size:30rpx;font-weight:bold;display:flex;align-items:center;background-color:{{minButton3.bgColor}};border-color:#f4c600;height:90rpx;width:160rpx;padding:10rpx auto;">45分钟</button>
      <button bindtap="chooseMin" data-min="60"  plain="{{minButton4.plain}}" style="color:{{minButton4.color}};font-size:30rpx;font-weight:bold;display:flex;align-items:center;background-color:{{minButton4.bgColor}};border-color:#f4c600;height:90rpx;width:160rpx;padding:10rpx auto;">60分钟</button>
    </view>
    <view class="line line_area"></view>
    <input class="inputMin main_text" bindinput="inputMin" placeholder="自定义,离场时间必须在5分钟至60分钟之间" placeholder-class="hint_text"  type="number" />
  </view>
  <view class="map_area">
    <view class="chooseTime_title">
      <text class="main_text chooseMap_text" bindtap="chooseCarLocation">{{chooseMapText}}</text>
    </view>
    <!-- <map id='shareMap2' class='map_style2' bindtap="testmap"  latitude="{{latitude}}" longitude="{{longitude}}" bindcontroltap="bindcontroltap"   controls="{{controls}}" show-location /> -->
  </view>
  <view class="map_area">
    <input class="inputMin main_text" bindinput="bindAddressRemark" placeholder="在此输入位置的备注信息" placeholder-class="hint_text"  type="text" />
  </view>
  <view class="share_area">
    <button type="primary" bindtap="sharingParking" style="background-color:#f4c600">发布</button>
  </view>
</block>
<block wx:else>
  <text>加载中</text>
</block>
