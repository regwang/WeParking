<!--serviceInfo.wxml-->
<view bindtap="contactService" class="line_area">
  <view class="phone_area">
    <image src="/icon/phone.png" style="width:42rpx;height:34rpx"></image>
    <text class="hint_text text_margin">联系电话</text>
  </view>
  <text class="main_text">{{phone}}</text>
</view>
<view bindtap="copyWechat" class="line_area">
  <view class="phone_area">
    <image src="/icon/weixin.png" style="width:44rpx;height:34rpx"></image>
    <text class="hint_text text_margin">微信</text>
  </view>
  <text class="main_text">{{wechat}}</text>
</view>
